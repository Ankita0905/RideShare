<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <!--<item name="materialButtonStyle">@style/MyButtonTheme</item>-->

    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/ic_launcher_background</item>
    </style>

    <style name="MyButtonTheme" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ButtonStyleTextColor</item>
    </style>

    <style name="ButtonStyleTextColor">
        <!-- For filled buttons, your theme's colorPrimary provides the default background color of the component, and -->
        <!--the text color is colorOnPrimary -->
        <item name="colorOnPrimary">@color/button_color</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="OutLinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <style name="TextInputLayout" parent="OutLinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="hintTextColor">@color/colorPrimary</item>
    </style>

    <style name="UserStyle" parent="TextAppearance.AppCompat.Small.Inverse">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>

    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>

    </style>

    <style name="SettingItemStyle">
        <item name="android:background">@drawable/bg_setting_item</item>
        <item name="android:elevation">10dp</item>
        <item name="android:paddingStart">@dimen/_16sdp</item>
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:layout_marginEnd">@dimen/_12sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <style name="DatePickerTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerTheme.ButtonBarButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerTheme.ButtonBarButtonStyle</item>
    </style>

    <style name="DatePickerTheme.ButtonBarButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TabLayout" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/medTextSize</item>
    </style>

    <style name="UserActionEditText" parent="@android:style/TextAppearance.Inverse">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>


    </style>

    <style name="SignInLogin_EditText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:elevation">@dimen/_10sdp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_margin">@dimen/medLMargin</item>
        <item name="android:layout_marginStart">@dimen/medLMargin</item>
        <item name="android:layout_marginEnd">@dimen/medLMargin</item>
        <item name="android:layout_marginTop">@dimen/smallMargin</item>
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:paddingStart">@dimen/padding</item>


    </style>

    <style name="Bio_EditText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_80sdp</item>
        <item name="android:elevation">@dimen/_10sdp</item>
        <item name="android:maxLines">1</item>

        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:textSize">@dimen/medTextSize</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:paddingStart">@dimen/padding</item>
    </style>


    <style name="WhiteProgresBar">
        <item name="android:colorPrimaryDark">@color/white</item>
    </style>


    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">#E7C36B</item><!--#D6AF51-->
        <item name="colorPrimary">@color/textColorGrey</item>
        <item name="android:textColorPrimary">@color/textColorGrey</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="CalenderViewWeekCustomText"/>


    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance">
        <item name="android:textColor">#9EA4B2</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>


    <style name="MyFontStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>


    <!--android:theme="@style/MySocialLoginButtonTheme"
                android:layout_marginStart="@dimen/_2sdp"
                app:iconGravity="textStart"
                android:elevation="@dimen/_10sdp"-->

    <style name="MySocialLoginButtonTheme" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_weight">1</item>
        <item name="iconTint">@null</item>
        <item name="android:strokeWidth">@dimen/_1dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:strokeColor">@color/grey</item>
        <item name="android:layout_gravity">center</item>



    </style>

    <style name="DarkProgressBar">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="RideDetailStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
    </style>

</resources>
